<Window x:Class="WpfApp1.TypeElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Типы элементов" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Menu x:Name="menu" Grid.Row="0">
            <MenuItem Name="Add" Header="Добавить" Click="Add_click" />
            <MenuItem Name="Change" Header="Изменить" Click="Change_Click"/>
            <MenuItem Name="Delete" Header="Удалить" Click="Delete_Click"/>
        </Menu>
        <ListView x:Name="listView" Grid.Row="1" ItemsSource="{Binding Path=.}">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Header="Наименование" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn  Header="Описание" DisplayMemberBinding="{Binding Path=Description}"/>
                </GridView>
            </ListView.View>

        </ListView>

    </Grid>
</Window>
